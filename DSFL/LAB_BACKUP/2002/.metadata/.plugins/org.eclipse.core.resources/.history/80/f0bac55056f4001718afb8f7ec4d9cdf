#include "queues.h"
#include<iostream>
#include<malloc.h>
#include<string>
using namespace std;

queues::queues()
{
	front=rear=NULL;

	id=1;
}

int queues:: isfull()
{
	node *p;
	int count;
	p=front;

	while(p != NULL)
	{
		p=p->link;
		count++;
	}

	if(count==max)
			return 1;
	else
			return 0;

}

int queues:: isempty()
{
	if(front==rear)
		return 1;

	else
		return 0;

}

void queues:: enqueue(string a,string ad,string p_n)
{
	node *n;
	n=new node;

	n->data.name=a;
	n->data.add=ad;
	n->data.ph_no=p_n;

	n->link=NULL;

	if(isempty())
		front=rear=n;

	else
	{
		rear->link=n;
		rear=n;
	}


}

void queues:: dequeue()
{
	int pos;

	pos=check();

	node *p;

	p=front;

	while(--pos)
	{
		temp=p;
		p=p->link;

	}
}

