#include "stack.h"
#include<malloc.h>
#include<iostream>
using namespace std;

stack::stack()
{
	Top=NULL;
}

int stack:: isempty()
{
	if Top==NULL;
		return 1;
}
int stack:: isfull()
{
	int count=0;
	node *p;

	p=Top;

	while(p!=NULL)
	{
		count++;
		p=p->link;
	}

	if(count==max)
		return 1;

	else
		return 0;
}

void stack:: push(int x)
{
	node *n;

	n=(node*)malloc(sizeof(node));

	n->data=x;
	n->link=Top;

	Top=n;
}
