	string arr;
	string ans;

	cout<<"Enter String :";
	cin>>arr;
	cout<<endl;

	int len=arr.length();

	for(int i=0;i<len;i++)
	{
		char x;

		cin>>x;

		if( (x>='A' && x<='Z') || (x>='a' && x<='z') )
		{
			ans[k++]=arr[i];
		}

		else if(post.isoperator(x))
		{
			while( post.ISP(s.tope()) >= post.ICP(x) )
			{
				ans[k++]=s.pop();
			}

			s.push(x);
		}

		else if(x==')')
		{
			while(s.tope() != '(')
			{
				ans[k++]=s.pop();
			}

		}

		if(i==len-1 && !s.isempty())
		{
			while(!isempty())
				ans[k++]=s.pop();
		}
	}
}
